{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "include": ["**/*.ts", "../types/**/*.ts"],
  "exclude": ["node_modules"]
}
