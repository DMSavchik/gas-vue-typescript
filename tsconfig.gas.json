{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["esnext"]
  },
  "include": ["@types/**/*.ts", "script/**/*.ts"],
  "exclude": ["node_modules"]
}
